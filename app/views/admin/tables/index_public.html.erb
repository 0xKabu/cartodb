 
  <%= stylesheet_link_merged(:public_tables).html_safe %>
  <%= javascript_include_merged(:public_tables).html_safe %>


  <%= render 'subheader' %>

  <section id="content">
    <div class="inner_content">

      <div class="tables_list">
        <div class="left">
          <div class="top_blue_medium_big">
            <h3><strong><%= pluralize(@tables.size, "Public</strong> table", "Public</strong> tables").html_safe %> in cartoDB</h3>
            <form action="#">
              <input type="text" value="" name="table_name" />
              <input type="submit" value="" name="q" />
            </form>
          </div>
          <div class="middle_white_medium">
            <% if @tables.size == 0 %>
              <div class="no_tables">
                <h5>Ouch! There are not tables for your search</h5>
                <p>You can try with different terms or you can <a href="#">create your own table</a></p>
              </div>
            <% else %>
              <ul class="your_tables">
                <% @tables.each_with_index do |table| %>
                <li<%= ' class="last"'.html_safe if @tables.last == table %>>
                  <h4><%= link_to(table.name, table) %></h4>
                  <p class="status <%= css_class_for_privacy(table) %>"><%= table_privacy(table) %></p>
                  <div class="meta_info">
                    <span class="watching">
                      <a href="#" class="no_watching">Stop watching</a>
                    </span>
                    <span class="tags">
                      <a href="#">History</a>
                      <a href="#">WHS-JK</a>
                      <a href="#">Manus DB</a>
                    </span>
                  </div>
                </li>
                <% end %>
              </ul>
            <% end %>
          </div>
          <div class="bottom_white_medium"></div>

          <div class="paginate">
            <a href="#" class="previous">Previous</a>
            <ul>
              <li class="selected"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
            </ul>
            <a href="#" class="next">Next</a>
          </div>
        </div>
        <div class="right">
          <div class="banner">
            <div class="top_white_short"></div>
            <div class="middle_white_short">
              <h3>Can't find what you are looking for?</h3>
              <p>Upload your data to a new table</p>
              <a href="#">Create a new table</a>
            </div>
            <div class="bottom_white_short"></div>
          </div>

          <h4>BROWSE BY TAGS</h4>
          <ul>
            <li><a href="#"><span style="background-position:-100px 0">Natural</span></a></li>
            <li><a href="#"><span style="background-position:-130px 0">Jamonal</span></a></li>
            <li><a href="#"><span style="background-position:-200px 0">WHS</span></a></li>
            <li><a href="#"><span style="background-position:-205px 0">Oldies</span></a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
