<% content_for(:head) do %>
  <%= stylesheet_link_merged(:table).html_safe %>
<% end %>
<% content_for(:js) do %>
  <%= javascript_include_merged(:table).html_safe %>
<% end %>

<section class="subheader">
  <div class="outer">
    <div class="inner_subheader">
      <div class="left">
        <h2><a href="#change_title"><%= @table.name %></a></h2>
        <p class="status">
          <% if @table.pending_to_save? %>
            <a class="save" href="#change_privacy">SAVE</a>
          <% else %>
            <a class="<%= table_privacy_text(@table).downcase %>" href="#change_privacy"><%= table_privacy_text(@table) %></a>
          <% end %>
          </p>
        <span class="tags">
          <% unless @table.tags.blank? %>
            <% @table.tags.split(',').each do |tag_name| %>
            <p><%= tag_name %></p>
            <% end %>
          <% end %>
          <a href="#" class="add">add tags</a>
        </span>
        <ul class="tab_menu">
          <li class="selected"><a href="#">Table</a></li>
          <li><a class="disabled">Map</a></li>
        </ul>
      </div>
      <div class="right">
        <p class="settings">
          <a class="delete" table-id="<%= @table.id %>" href="#delete_table">delete table</a> | <a class="settings selected" href="#show_advanced_options">advanced</a>
        </p>
        <span class="paginate">
          <a class="next" href="#next_column">Next column</a>
          <a class="previous" href="#prev_column">Previous column</a>
        </span>
      </div>
    </div>
  </div>
</section>

<div class="table_position">
  <table border="0" id="cDBtable"></table>
</div>

<div id="map"></div>

<%= content_for(:mamufas) do %>
  <div class="mamufas">
    <div class="delete_window">
      <a href="#close_window" class="close_delete"></a>
      <div class="inner_">
        <span class="top">
          <h3>You are about to delete this table</h3>
          <p>You will not be able to recover this information. We really recommend to <a href="#">export the data</a> before deleting it.</p>
        </span>
        <span class="bottom">
          <a href="#close_window" class="cancel">cancel</a>
          <a href="#confirm_delete" class="confirm_delete">Delete this table</a>
        </span>
      </div>
    </div>
  </div>
<% end %>


<script type="text/javascript">var table_id = <%= @table.id %>;</script>
<script type="text/javascript">var status = "<%= table_privacy_text(@table).downcase %>";</script>