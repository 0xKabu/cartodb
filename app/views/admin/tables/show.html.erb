<% content_for(:head) do %>
  <%= stylesheet_link_merged(:table).html_safe %>
<% end %>
<% content_for(:js) do %>
  <%= javascript_include_merged(:table).html_safe %>
<% end %>

<section class="subheader">
  <div class="mamufas">
    <div class="inner_subheader">
      <div class="left">
        <h2><a href="#change_title"><%= @table.name %></a></h2>
        <p class="status"><a class="<%= table_privacy_text(@table).downcase %>" href="#change_privacy"><%= table_privacy_text(@table) %></a></p>
        <% unless @table.tags.blank? %>
        <span class="tags">
          <% @table.tags.split(',').each do |tag_name| %>
          <a href="#"><%= tag_name %></a>
          <% end %>
        </span>
        <% end %>
        <ul class="tab_menu">
          <li class="selected"><a href="#">Table</a></li>
          <li><a href="#">Map</a></li>
        </ul>
      </div>
      <div class="right">
        <p class="settings">
          <a class="delete" href="#delete_table">delete table</a> | <a class="settings selected" href="#show_advanced_options">advanced</a>
        </p>
        <span class="paginate">
          <a class="next" href="#">Next column</a>
          <a class="previous" href="#">Previous column</a>
        </span>
      </div>
    </div>
  </div>
</section>

<div class="table_position">
  <table border="0" id="cDBtable"></table>
</div>

<div id="map"></div>


<script type="text/javascript">var table_id = <%= @table.id %>;</script>
<script type="text/javascript">var status = "<%= table_privacy_text(@table).downcase %>";</script>