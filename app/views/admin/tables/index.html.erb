<%= content_for(:head) do %>
  <%= stylesheet_link_merged(:dashboard).html_safe %>
<% end %>
<%= content_for(:js) do %>
  <%= javascript_include_merged(:dashboard).html_safe %>
<% end %>

<%= render 'subheader' %>

<section id="content">
  <div class="inner_content">
    <div class="requests_info">
      <div class="top_white"></div>
      <div class="middle_white">
        <a class="close" href="#close_stats">close</a>
        <h2>Welcome back <%= current_user.username %></h2>
        <p>You have done <strong>1,253 requests</strong> in the last 22 days</p>
        <img src="http://chart.googleapis.com/chart?chxr=0,6.667,100&chxs=0,676767,0,0,_,676767|1,676767,0,0,_,676767&chxt=x,y&chbh=37,1,1&chs=849x60&cht=bvg&chco=D7E6E8|D7E6E8|D7E6E8|D7E6E8|D7E6E8|D7E6E8|D7E6E8|BFD6D9|BFD6D9|BFD6D9|BFD6D9|BFD6D9|BFD6D9|BFD6D9|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4|9CC0C4&chd=s1:ibYXZabeaaaglfiiklqpmn,fl9YMYS&chp=0.033" width="849" height="60" alt="Requests stats" />
      </div>
      <div class="bottom_white"></div>
    </div>

    <div class="tables_list">
      <div class="left">
        <div class="top_blue_medium">
          <h3><strong><%= pluralize(current_user.tables_count, 'table', 'tables') %></strong> in your account</h3>
          <a class="new_table" href="#create_table">Create a new table</a>
        </div>
        <div class="middle_white_medium">
          <% if @tables.current_page_record_count == 0 %>
            <div class="no_tables">
              <h5>Hey! You don't have any tables</h5>
              <p>Why do you not start <a href="#create_table" class="new_table">creating a new table</a>?</p>
            </div>
          <% else %>
            <ul class="your_tables">
              <% @tables.each_with_index do |table, i| %>
              <li<%= ' class="last"'.html_safe if i == @tables.current_page_record_count - 1%>>
                <h4><%= link_to(table.name, table) %></h4>
                <p class="status <%= table_privacy_text(table).downcase %>"><%= table_privacy_text(table) %></p>
                <div class="meta_info">
                  <span class="info">
                    <% unless table.updated_at.blank? %>
                    <p class="last_op">Last operation <%= time_ago_in_words(table.updated_at) %> ago</p>
                    <% end %>
                    <p class="delete"> | <a table-id="<%= table.id %>" href="#" class="delete">delete table</a></p>
                  </span>
                  <span class="tags">
                    <% unless table.tags.blank? %>
                      <% table.tags.split(',').each do |tag_name| %>
                      <a href="#"><%= tag_name %></a>
                      <% end %>
                    <% end %>
                  </span>
                </div>
              </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="bottom_white_medium"></div>
        <%= paginate(@tables) %>
      </div>
      <div class="right">
        <h4>BROWSE BY TAGS</h4>
        <% if @tags.empty? %>
          <span class="no_tags">
            <p>You have not added any tags yet.</p>
            <p>Tags are useful for organizing and filtering your tables.</p>
            <p>For adding tags to a table, open it and define it with the button under the name.</p>
          </span>
        <% else %>
          <ul>
            <% @tags.each do |tag| %>
              <li><a href="#"><span style="background-position:<%= tag_width(tag[:count], @tags.last[:count], @tags.first[:count]) %>px 0"><%= tag[:name] %></span></a></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</section>


<%= content_for(:mamufas) do %>
  <div class="mamufas">
    
    <div class="create_window">
      <a href="#close_window" class="close_create"></a>
      <div class="inner_">
        <span class="loading">
          <h5>We are creating your table...</h5>
          <p>It's not gonna be a lot of time. Just a few seconds, ok?</p>
        </span>
        <form action="#">
          <span class="top">
            <h4>Do you want to import some data to the new table?</h4>
            <p>You will also be available to do it later.</p>
            <ul>
              <li class="selected"><a href="#">I want to create an empty table</a></li>
              <li class="disabled">
                <a href="#">I want to start with some imported data...</a>
                <span class="file">
                  <input type="file" />
                </span>
              </li>
            </ul>
          </span>
          <span class="bottom">
            <a href="#" class="cancel">cancel</a>
            <input id="create_table" type="submit" value="Create table"/>
          </span>
        </form>
      </div>
    </div>

    <div class="settings_window">
      <a href="#close_window" class="close_settings"></a>
      <div class="inner_">
        <form action="#">
          <span class="top">
            <h4>Account information</h4>
            <p>From here you can change your basic account information</p>
            <label>YOUR E-MAIL</label>
            <input type="text" />
            <div class="pass_block">
              <label>YOUR PASSWORD</label>
              <input type="password" disabled="true"/>
              <a href="#change_password" class="change">Change password</a>
            </div>
            <a class="forgot" href="#forgot_window">Forgot your password?</a>
          </span>
          <span class="bottom">
            <input type="submit" value="Save changes" />
          </span>
        </form>
      </div>
    </div>
    
    <div class="delete_window">
      <a href="#close_window" class="close_delete"></a>
      <div class="inner_">
        <span class="top">
          <h3>You are about to delete this table</h3>
          <p>You will not be able to recover this information. We really recommend to <a href="#">export the data</a> before deleting it.</p>
        </span>
        <span class="bottom">
          <a href="#close_window" class="cancel">cancel</a>
          <a href="#confirm_delete" class="confirm_delete">Delete this table</a>
        </span>
      </div>
    </div>
  </div>
<% end %>
