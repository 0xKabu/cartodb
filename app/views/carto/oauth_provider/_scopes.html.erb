<% my_test_scopes_by_category = [
  {
    description: "Personal user data",
    scopes: [
      {name: "Username", new: true},
      {name: "Email addreses", new: true},
      {name: "Organization name", new: true}
    ]
  },
  {
    description: "Access to list your datasets",
    icon: "money",
    scopes: [
      {name: "reqs_per_tile", new: false},
      {name: "twitter_theforcewakens", new: false},
      {name: "omg", new: true},
      {name: "omg 2", new: true},
      {name: "omg 3", new: true},
      {name: "omg 4", new: true},
      {name: "omg 5", new: true}
    ]
  },
] %>


<% @scopes_by_category.each do |category| %>
  <div class='oauth-scopes-category'>
  <% if category[:icon]%>
    <img src="<%= image_path "oauth_provider/category_#{category[:icon]}.svg" %>">
  <% end %>
  <h3 class='oauth-scopes-category__title'><%= category[:description] %></h3>
  <ul class='oauth-scopes-category__list'>
    <% category[:scopes].each do |scope| %>
      <li class='oauth-scopes-category__scope <%= "oauth-scopes-category__scope--disabled" unless scope[:new] %>'>
        <%= scope[:description] %>
      </li>
    <% end %>
  </ul>
</div>
<% end %>
