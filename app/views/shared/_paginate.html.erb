<div class="paginate">
  <% if collection.prev_page %>
    <%= link_to('Previous', {:page => collection.prev_page}, {:class => 'previous'}) %>
  <% end %>
  <ul>
    <% collection.page_range.each do |i| %>
      <li<%= ' class="selected"'.html_safe if i == collection.current_page %>>
        <%= link_to(i, :page => i) %>
      </li>
    <% end %>
  </ul>
  <% if collection.next_page %>
    <%= link_to('Next', {:page => collection.next_page}, {:class => 'next'}) %>
  <% end %>
</div>
